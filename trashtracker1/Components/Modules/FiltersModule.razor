@using trashtracker1.Components.Code

<div class="col-span-3 row-span-2 bg-white rounded-xl shadow-xl p-4 flex">
    <div class="flex flex-col gap-2 flex-1">
        <h2 class="text-md">Filters:</h2>
        <input type="range" class="w-1/3" />
        <div class="flex gap-2 flex-wrap">
            <button @onclick="() => litterFilters.GetLitterData(2, 1)" class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">1 dag</p></button>
            <button @onclick="() => litterFilters.GetLitterData(4, 1)" class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">3 dagen</p></button>
            <button @onclick="() => litterFilters.GetLitterData(6, 1)" class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">5 dagen</p></button>
            <button @onclick="() => litterFilters.GetLitterData(1, 1)" class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">vandaag</p></button>
        </div>
        <div class="flex gap-2 flex-wrap">
            <button class="px-2 py-1 rounded-xl shadow-xl)"><p class="text-sm">Klein afval</p></button>
            <button class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">Medium afval</p></button>
            <button class="px-2 py-1 rounded-xl shadow-xl"><p class="text-sm">Plastic en chemisch afval</p></button>
        </div>
    </div>
    <div class="flex-1 border-l pl-4">
        <p class="text-sm">Speciale locaties om in de gaten te houden tijdens [feestdag]:</p>
    </div>
</div>
@code{
    [Inject]
    private LitterFilters litterFilters { get; set; }
}